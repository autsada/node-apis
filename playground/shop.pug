extends layout/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if products.length > 0
            div.grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://cdn.shopify.com/s/files/1/0347/6329/products/HB_BL_book_1024x1024.jpg?v=1530114869", alt="A Book")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products..

